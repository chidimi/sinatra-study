<main class="field m-4">
    <form method="post" action="/memos/<%= @memo[0]['id'] %>">
        <input id="hidden" type="hidden" name="_method" value="patch">
        <p>タイトル</p>
        <input type="text" name="title" value="<%= h @memo[0]['title'] %>" class="input">
        <p>内容</p>
        <textarea name="content" class="textarea"><%= h @memo[0]['content'] %></textarea>
        <input type="submit" value="送信" class="button is-primary mt-4">
    </form>
</main>
