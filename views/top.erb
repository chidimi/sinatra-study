      <div class="navbar-brand">
          <h1 class="title m-2">メモアプリ</h1>
      </div>
  </header>
  <main class="content m-4">
    <div class="box">
      <ul>
        <% @memos.each do |memo| %>
        <li class="li">
            <a href="memos/<%= h memo['id'] %>"><%= h memo['title'] %></a>
        </li>
        <% end %>
      </ul>
    </div>
    <a href="/memos/new" class="button is-link">新規追加</a>
  </main>
</body>
</html>
